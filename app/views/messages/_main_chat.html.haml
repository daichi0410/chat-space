.chat-main
 .chat-main__group-info
  .chat-main__group-info__title
   .chat-main__group-info__title__name 
    = @group.name
    .chat-main__group-info__title__name__detail
     Member : 
     .chat-main__group-info__title__name__detail__member
     - @group.users.each do |user|
      = user.name
   .chat-main__group-info__title__edit 
    =link_to edit_group_path(current_user), class:"chat-main__group-info__btn chat-main__group-info__btn--edit" do
     Edit

 .chat-main__message-list
  = render @messages
  -# .chat-main__message-list__namebox1
  -#  .chat-main__message-list__namebox1__name1
  -#   daichi
  -#  .chat-main__message-list__namebox1__date1
